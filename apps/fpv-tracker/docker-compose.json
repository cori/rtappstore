{
  "schemaVersion": 2,
  "services": [
    {
      "name": "fpv-tracker",
      "image": "ghcr.io/cori/flowchart:sha-6c4b3b3",
      "isMain": true,
      "environment": [
        { "key": "NODE_ENV", "value": "production" },
        { "key": "DB_PATH", "value": "/app/data/fpv-tracker.db" },
        { "key": "TZ", "value": "${TZ}" }
      ],
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/data",
          "containerPath": "/app/data"
        }
      ],
      "internalPort": "3000"
    }
  ]
}
