{
  "$schema": "../dynamic-compose-schema.json",
  "schemaVersion": 2,
  "services": [
    {
      "name": "filament-profiles-db",
      "image": "postgres:16-alpine",
      "environment": [
        { "key": "POSTGRES_USER", "value": "${FILAMENT_PROFILES_DB_USER}" },
        { "key": "POSTGRES_PASSWORD", "value": "${FILAMENT_PROFILES_DB_PASSWORD}" },
        { "key": "POSTGRES_DB", "value": "${FILAMENT_PROFILES_DB_NAME}" }
      ],
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/postgres",
          "containerPath": "/var/lib/postgresql/data"
        }
      ],
      "healthCheck": {
        "test": "pg_isready -U filamentprofiles",
        "interval": "5s",
        "timeout": "5s",
        "retries": 5
      },
      "internalPort": "5432"
    },
    {
      "name": "filament-profiles",
      "image": "ghcr.io/cori/filament-profiles:0.2.0",
      "isMain": true,
      "dependsOn": ["filament-profiles-db"],
      "command": "sh -c 'alembic upgrade head && uvicorn filamentprofiles.main:app --host 0.0.0.0 --port 8000'",
      "environment": [
        { "key": "DATABASE_URL", "value": "postgresql://${FILAMENT_PROFILES_DB_USER}:${FILAMENT_PROFILES_DB_PASSWORD}@filament-profiles-db:5432/${FILAMENT_PROFILES_DB_NAME}" },
        { "key": "SPOOLMAN_URL", "value": "${SPOOLMAN_URL}" },
        { "key": "TZ", "value": "${TZ}" }
      ],
      "internalPort": "8000"
    }
  ]
}
